@model EZPayroll.MVC.Models.Roles

@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/AdminLTE/_Layout.cshtml";
}
<br />
<section class="content">
    <div class="container-fluid">
        <div class="row">
            <!-- left column -->
            <div class="col-md-12">
                <!-- general form elements -->
                <div class="card card-primary">
                    <div class="card-header">
                        <h3 class="card-title">Search</h3>
                    </div>
                    <!-- /.card-header -->
                    <!-- form start -->                  
                    <form asp-action="Create" class="offset-4 col-4" role="form">
                     <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        <div class="card-body">
                            <div class="form-group row">
                                <label class="control-label">Role Name</label>
                                <input asp-for="RoleName" class="form-control" />
                                <span asp-validation-for="RoleName" class="text-danger"></span>
                            </div>
                            <div class="form-group row">
                                <label  class="control-label">Rate Per Hour</label>
                                <input asp-for="RoleRate" class="form-control" />
                                <span asp-validation-for="RoleRate" class="text-danger"></span>
                            </div>   
                        </div>
                        <!-- /.card-body -->                     
                        <div class="card-footer">
                            <a asp-action="Index" class="btn btn-default">  Back to List</a>
                            <button asp-action="Create" class="btn btn-info text-white float-right">Create</button>                           
                        </div>
                    </form>
                </div>
                <!-- /.card -->
            </div>
            <!--/.col (right) -->
        </div>
        <!-- /.row -->
    </div>
</section>