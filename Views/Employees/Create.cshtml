@model EZPayroll.MVC.ViewModels.EmployeesViewModel

@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/AdminLTE/_Layout.cshtml";
}
<br />
<section class="content">
    <div class="container-fluid">
        <div class="row">
            <!-- left column -->
            <div class="col-md-12">
                <!-- general form elements -->
                <div class="card card-primary">
                    <div class="card-header">
                        <h3 class="card-title">Create Employee</h3>
                    </div>
                    <!-- /.card-header -->
                    <!-- form start -->
                    <form enctype="multipart/form-data" class="offset-4 col-4" asp-action="Create">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        <div class="form-group row">
                            <label asp-for="Employee.Name" class="control-label"></label>
                            <input asp-for="Employee.Name" class="form-control" />
                            <span asp-validation-for="Employee.Name" class="text-danger"></span>
                        </div>
                        <div class="form-group row">
                            <label asp-for="Employee.Surname" class="control-label"></label>
                            <input asp-for="Employee.Surname" class="form-control" />
                            <span asp-validation-for="Employee.Surname" class="text-danger"></span>
                        </div>
                        <div class="form-group row">
                            <label asp-for="ProfileImage" class="control-label"></label>
                            <div class="custom-file">
                                <input asp-for="ProfileImage" class="custom-file-input" id="customFile">
                                <label class="custom-file-label" for="customFile">Choose file</label>
                            </div>
                            <span asp-validation-for="ProfileImage" class="text-danger"></span>
                        </div>
                        <div class="form-group row">
                            <label class="control-label">Role</label>
                            @try
                            {
                                if (Model != null)
                                {
                                    <select asp-for="Employee.RoleId" asp-items="Model.Roles(0)" class="form-control"><option value="">Select...</option></select>
                                }
                                else
                                {
                                    <select asp-for="Employee.RoleId" class="form-control"><option value="">ERROR...</option></select>
                                }
                            }
                            catch (Exception)
                            {

                                <select asp-for="Employee.RoleId" class="form-control"><option value="">ERROR...</option></select>
                            }
                            <span asp-validation-for="Employee.RoleId" class="text-danger"></span>
                        </div>
                        <div class="card-footer">
                            <a asp-action="Index" class="btn btn-default">  Back to List</a>
                            <button asp-action="Create" class="btn btn-info text-white float-right">Create</button>
                        </div>
                    </form>
                </div>
                <!-- /.card -->
            </div>
            <!--/.col (right) -->
        </div>
        <!-- /.row -->
    </div>
</section>
<script>
    type = "text/javascript" >
        // Add the following code if you want the name of the file appear on select
        $(".custom-file-input").on("change", function () {
            var fileName = $(this).val().split("\\").pop();
            $(this).siblings(".custom-file-label").addClass("selected").html(fileName);
        });
</script>


